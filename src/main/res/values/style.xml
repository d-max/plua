<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="android:Theme.Material.Light.DarkActionBar">
        <item name="android:colorPrimary">@color/indigo</item>
        <item name="android:colorPrimaryDark">@color/indigo_dark</item>
        <item name="android:colorAccent">@color/pink</item>
        <item name="undoBarStyle">@style/UndoBarCustomStyle</item>
    </style>

    <style name="Dialog" parent="Default">
        <item name="DialogSpotColor">@color/indigo</item>
        <item name="DialogTitleText">@string/importing</item>
    </style>

    <style name="UndoBarCustomStyle">
        <item name="containerStyle">@style/UndoBarCustomContainerStyle</item>
        <item name="messageStyle">@style/UndoBarCustomMessageKitKat</item>
        <item name="buttonStyle">@style/UndoBarButtonKitKat</item>
        <item name="dividerStyle">@style/UndoBarDividerClassic</item>
        <item name="inAnimation">@anim/undobar_material_in_anim</item>
        <item name="outAnimation">@anim/undobar_material_out_anim</item>
    </style>

    <style name="UndoBarCustomContainerStyle" parent="UndoBarKitKat">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/undo_margin</item>
        <item name="android:layout_marginBottom">@dimen/undo_margin</item>
    </style>

    <style name="UndoBarCustomMessageKitKat" parent="UndoBarMessageKitKat">
        <item name="android:layout_marginLeft">@dimen/undo_padding</item>
        <item name="android:layout_marginRight">@dimen/undo_padding</item>
    </style>
</resources>